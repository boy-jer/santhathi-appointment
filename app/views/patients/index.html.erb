<div class='continer'>
<h1>Listing patients</h1>

<table class="listing">
  <tr>
    <th>Hospital no</th>
    <th>Reg date</th>
    <th>Patient name</th>
    <th>Age</th>
    <th>Dob</th>
    <th>Spouse name</th>
    <th>Spouse age</th>
    <th>Address</th>
    <th>Contactno</th>
  </tr>

<% for patient in @patients %>
  <tr>
    <td><%=h patient.hospital_no %></td>
    <td><%=h patient.reg_date %></td>
    <td><%=h patient.patient_name %></td>
    <td><%=h patient.age %></td>
    <td><%=h patient.dob %></td>
    <td><%=h patient.spouse_name %></td>
    <td><%=h patient.spouse_age %></td>
    <td><%=h patient.address %></td>
    <td><%=h patient.contact_no %></td>
    <td><%= link_to 'Show', patient_path(patient) %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient_path(patient), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New patient', new_patient_path %>
</div>